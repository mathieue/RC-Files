#alias cal='var=$(/usr/bin/cal -m); echo "${var/$(date +%-d)/$(echo -e "\033[1;31m$(date +%-d)\033[0m")}"'
alias tree="find . |grep -v .svn | grep -v .git | sed 's/[^/]*\//|   /g;s/| *\([^| ]\)/+--- \1/'"
alias e="emacs -nw"

phptags () {
    ctags-exuberant -h ".php" -R                     \
        --exclude="\.git"                            \
        --exclude="*\.js"                            \
        --exclude="*\.sql"                            \
	--langmap=php:.php.module.inc \
        --totals=yes                                 \
        --tag-relative=yes                           \
        --PHP-kinds=+cf                              \
        --regex-PHP='/abstract class ([^ ]*)/\1/c/'  \
        --regex-PHP='/interface ([^ ]*)/\1/c/'       \
        --regex-PHP='/(public |static |abstract |protected |private )+function ([^ (]*)/\2/f/'
}


reload () {
   source ~/.bashrc
}

if [ -f /etc/bash_completion ] ; then
    source /etc/bash_completion
    complete -o filenames -F _longopt a2psfill
    complete -o filenames -F _longopt rechercher
    complete -F _command loop
    for file in $HOME/.bash/completion/*; do
       source $file
    done
fi

export PYTHONSTARTUP=~/.pythonrc

#git life
c_cyan=`tput setaf 6`
c_red=`tput setaf 1`
c_green=`tput setaf 2`
c_sgr0=`tput sgr0`


 
parse_git_branch ()
{
  if git rev-parse --git-dir >/dev/null 2>&1
  then
          gitver=$(git branch 2>/dev/null| sed -n '/^\*/s/^\* //p')
  else
          return 0
  fi
  echo -e $gitver
}

branch_color ()
{
        if git rev-parse --git-dir >/dev/null 2>&1
        then
                color=""
                if git diff --quiet 2>/dev/null >&2 
                then
                        color="${c_green}"
                else
                        color=${c_red}
                fi
        else
                return 0
        fi
        echo -ne $color
}

PS1='[\[$(branch_color)\]$(parse_git_branch)\[${c_sgr0}\]] \u@\[${c_red}\]\w\[${c_sgr0}\]: '
