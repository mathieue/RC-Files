alias sl='screen -list'

alias s='screen -RRd'

_melie-screen()
{
    local cur=${COMP_WORDS[COMP_CWORD]}
    COMPREPLY=( $(compgen -W '$(screen -list | cut -f 2 | cut -d "." -f 2 | grep -v "There" | head -n-2 )' -- $cur) )
}
complete -F _melie-screen s

